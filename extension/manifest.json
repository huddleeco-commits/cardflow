{
  "manifest_version": 3,
  "name": "CardFlow Quick Search",
  "version": "1.0.0",
  "description": "Right-click to search card prices across eBay, COMC, and more. Scan images to identify cards.",
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.ebay.com/*",
    "https://www.comc.com/*",
    "https://www.psacard.com/*",
    "https://www.sportscardspro.com/*",
    "https://www.pricecharting.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
